<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <TextView android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Authentication Progress"></TextView>
    <ProgressBar android:layout_height="wrap_content" style="?android:attr/progressBarStyleHorizontal" android:layout_width="match_parent" android:id="@+id/progressBar1b"></ProgressBar>
    <TextView android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Start Authentication as Bob"></TextView>
    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:text="Send Packet" android:id="@+id/button1b"></Button>
    
</LinearLayout>
